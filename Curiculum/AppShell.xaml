<?xml version="1.0" encoding="UTF-8" ?>
<Shell 
    x:Class="Curiculum.AppShell" 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Curiculum"
    Shell.FlyoutBehavior="Disabled"
    Title="Curiculum">
    
    <Shell.TitleView >
        <StackLayout Orientation="Vertical" Padding="15" BackgroundColor="LightCoral">
            <Label Text="MI APLICACION" HorizontalOptions="CenterAndExpand" FontSize="20" TextColor="Black" />
        </StackLayout>
    </Shell.TitleView>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
</Shell>